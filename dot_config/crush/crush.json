{
	"$schema": "https://charm.land/crush.json",
	"providers": {
		"openrouter": {
			"name": "OpenRouter",
			"base_url": "https://openrouter.ai/api/v1",
			"type": "openai",
			"api_key": "$OPENROUTER_API"
		},
		"ollama": {
			"name": "Ollama",
			"base_url": "https://ollama.mizuchi.dev/v1/",
			"type": "openai"
		}
	},
	"lsp": {
		"go": { "command": "gopls" }
	},
	"permissions": {
		"allowed_tools": [
			"view",
			"edit",
			"multiedit",
			"write",
			"ls",
			"grep",
			"mkdir",
			"git",
			"pnpm"
		]
	}
}
